# vim: set ft=sh:
run_hook() {

	if [ "$splash" = "y" ]; then
		if [ -n $cn ]; then
			msg -n "正在载入 启动界面..."
		else
			msg -n "Loading plymouth..."
		fi
		mknod /dev/fb c 29 0 &>/dev/null
#		mount devpts /dev/pts -tdevpts

		# plymouth deamon
		/bin/plymouthd
	
		# plymouth frontend
		/bin/plymouth --show-splash
		if [ -n $cn ]; then
			msg "完成."
		else
			msg "done."
		fi
	fi
}
