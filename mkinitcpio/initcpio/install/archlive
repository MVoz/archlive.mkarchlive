install ()
{
    MODULES="cdrom ide-cd_mod ide-core ide-generic aufs isofs loop fuse loop vfat ntfs reiserfs xfs btrfs ext4 ext3 ext2 $(all_modules '/kernel/fs' | grep -v "nls")  $(all_modules '/kernel/fs/squashfs') "
    # need usb modules for external drives
    MODULES="${MODULES} $(checked_modules "/usb/host" | grep -ve "_cs" -e "sl1811-hcd" -e "isp116x-hcd")"
    MODULES=$(echo ${MODULES}) #trim whitespace
    if [ "x${MODULES}" != "x" ]; then
        MODULES="${MODULES} usb_storage sd_mod sr_mod"
    fi
    
    BINARIES="cp ls find touch rm test chmod chown grep less sed basename tr ntfs-3g mount.aufs umount.aufs"
    FiLES=""
    add_dir /real_root
    add_dir /tmpfs
    add_dir /bootmnt
    SCRIPT="archlive"
}

# vim:ft=sh:ts=4:sw=4:et:
